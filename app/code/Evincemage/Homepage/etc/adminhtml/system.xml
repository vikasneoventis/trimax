<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="evincemage" translate="label" sortOrder="2">
            <label>Evincemage</label>
        </tab>
        <section id="homepage" translate="label" type="text" sortOrder="1009" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Homepage Settings</label>
            <tab>evincemage</tab>
            <resource>Evincemage_Homepage::homepage_configuration</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General</label>
                <field id="banner_image" translate="label" type="image" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Upload Banner Image</label>
                    <!-- Backend model which saves uploaded files on a defined directory path -->
                    <backend_model>Evincemage\Homepage\Model\Config\Backend\Image</backend_model>
                    <base_url type="media" scope_info="1">homepage</base_url>
                    <!-- Comment about allowed extensions of uploaded files which are defined in the backend model -->
                    <comment><![CDATA[Allowed file types: jpg, jpeg, gif, png, svg]]></comment>
                </field>
                <field id="banner_caption" translate="label" type="textarea" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Banner Caption Text</label>
                </field>
            </group>
        </section>
    </system>
</config>