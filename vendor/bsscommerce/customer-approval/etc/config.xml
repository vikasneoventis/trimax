<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
    	<customer_approval>
    		<general>
    			<enable>1</enable>
    			<auto_approval>1</auto_approval>
    		</general>
    		<admin_notification>
    			<admin_notification_enable>1</admin_notification_enable>
    		</admin_notification>
    		<email_setting>
    			<customer_email_enable>1</customer_email_enable>
    		</email_setting>
    	</customer_approval>
    </default>
</config>